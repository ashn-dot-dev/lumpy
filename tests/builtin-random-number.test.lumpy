random::seed("foo");
let min = 0;
let max = 0;
for i in 10000 {
    let x = random::number(-10, +10);
    assert(x >= -10);
    assert(x <= +10);
    if x < min { min = x; }
    if x > max { max = x; }
}
let epsilon = 0.001;
assert((min - -10) <= epsilon); # incredibly likely
assert((max - +10) <= epsilon); # incredibly likely
